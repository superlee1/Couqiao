doctype html
html(ng-app='webApp')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no')
    title website-demo
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js')
    script(src='/javascripts/angular.min.js')
    script(src='/javascripts/angular-route.min.js')
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/font-awesome-4.7.0/css/font-awesome.min.css', rel='stylesheet')
    script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/javascripts/controllers.js')
    script(src='/javascripts/core.js')

    block res

  body(ng-controller='mainController as mainContrl')
    div#page-top.controller(data-spy='scroll', data-target='#navibar', data-offset='50')
      div
        nav#navibar.navbar.navbar-inverse.navbar-fixed-top
          .container-fluid
            .navbar-header
              a.navbar-brand(href='#') LOGO
            ul.nav.navbar-nav
              li.active
                a.page-scroll(href='#page-top') 首页
              li
                a.page-scroll(href='#products') 产品图册
              li
                a.page-scroll(href='#subscribe') 如何购买
              li
                a.page-scroll(href='#germanProducts') 德物志
              li
                a.page-scroll(href='#contactUs') 联系我们
            form.navbar-form.navbar-left
              .input-group
                input.form-control(type='text', placeholder='Search')
                .input-group-btn
                  button.btn.btn-default(type='submit')
                    i.glyphicon.glyphicon-search
            ul.nav.navbar-nav.navbar-right
              li
                a(href='#')
                  span.glyphicon.glyphicon-user
                  |  Sign Up
              li
                a(href='#')
                  span.glyphicon.glyphicon-log-in
                  |  Login
    ng-view
      block content
